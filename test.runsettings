<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <!-- Parallel Execution Configuration -->
  <RunConfiguration>
    <MaxCpuCount>4</MaxCpuCount>
    <DisableParallelization>false</DisableParallelization>
    <TargetFrameworkVersion>net9.0</TargetFrameworkVersion>
    <TreatNoTestsAsError>false</TreatNoTestsAsError>
  </RunConfiguration>

  <!-- Test Adapter Settings -->
  <MSTest>
    <Parallelize>
      <Workers>4</Workers>
      <Scope>MethodLevel</Scope>
    </Parallelize>
  </MSTest>

  <!-- xUnit Settings -->
  <xUnit>
    <ParallelizeAssembly>true</ParallelizeAssembly>
    <ParallelizeTestCollections>true</ParallelizeTestCollections>
    <MaxParallelThreads>4</MaxParallelThreads>
    <PreEnumerateTheories>false</PreEnumerateTheories>
  </xUnit>

  <!-- Code Coverage Settings -->
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat code coverage">
        <Configuration>
          <Format>cobertura,opencover</Format>
          <Exclude>[*.Tests]*,[*.TestUtilities]*,[xunit.*]*,[*]*.Migrations.*</Exclude>
          <ExcludeByAttribute>Obsolete,GeneratedCodeAttribute,CompilerGeneratedAttribute</ExcludeByAttribute>
          <ExcludeByFile>**/obj/**/*,**/bin/**/*</ExcludeByFile>
          <IncludeDirectory>./src</IncludeDirectory>
          <SingleHit>false</SingleHit>
          <UseSourceLink>true</UseSourceLink>
          <IncludeTestAssembly>false</IncludeTestAssembly>
          <SkipAutoProps>true</SkipAutoProps>
          <DeterministicReport>true</DeterministicReport>
          <CollectFromChildProcesses>true</CollectFromChildProcesses>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>

  <!-- Logging Configuration -->
  <LoggerRunSettings>
    <Loggers>
      <Logger friendlyName="console" enabled="True">
        <Configuration>
          <Verbosity>normal</Verbosity>
        </Configuration>
      </Logger>
      <Logger friendlyName="trx" enabled="True">
        <Configuration>
          <LogFileName>test-results.trx</LogFileName>
        </Configuration>
      </Logger>
      <Logger friendlyName="html" enabled="True">
        <Configuration>
          <LogFileName>test-results.html</LogFileName>
        </Configuration>
      </Logger>
    </Loggers>
  </LoggerRunSettings>
</RunSettings>