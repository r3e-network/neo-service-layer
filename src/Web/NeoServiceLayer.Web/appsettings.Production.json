{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Neo": "Information",
      "Blockchain": "Information"
    }
  },
  "AllowedHosts": "*.neo-service-layer.com;localhost",
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "NeoServiceLayer-Production",
    "Audience": "NeoServiceLayerUsers-Production",
    "ExpiryInHours": 8
  },
  "NeoServiceLayer": {
    "EnableMockServices": false,
    "ProductionMode": true,
    "Environment": "Production",
    "Database": {
      "ConnectionString": "Server=localhost;Database=NeoServiceLayer;Trusted_Connection=true;",
      "DatabaseType": "SqlServer"
    },
    "Services": {
      "KeyManagement": {
        "Enabled": true,
        "UseHardwareSecurityModule": true,
        "KeyStorePath": "/secure/keys",
        "EncryptionRequired": true,
        "BackupEnabled": true,
        "AuditLogging": true,
        "KeyRotationInterval": "30.00:00:00"
      },
      "Oracle": {
        "Enabled": true,
        "DataSources": [
          "https://api.coingecko.com/api/v3",
          "https://api.coinmarketcap.com/v1",
          "https://min-api.cryptocompare.com/data",
          "https://api.binance.com/api/v3"
        ],
        "UpdateInterval": 10000,
        "ValidationRequired": true,
        "PriceDeviationThreshold": 5.0,
        "MaxRetries": 3
      },
      "Storage": {
        "Enabled": true,
        "DistributedStorage": true,
        "ReplicationFactor": 3,
        "CompressionEnabled": true,
        "EncryptionEnabled": true,
        "BackupSchedule": "0 2 * * *"
      },
      "Monitoring": {
        "Enabled": true,
        "MetricsCollectionInterval": 5000,
        "HealthCheckInterval": 10000,
        "AlertingEnabled": true,
        "LogRetentionDays": 90,
        "PerformanceThresholds": {
          "ResponseTime": 1000,
          "ErrorRate": 5.0,
          "CpuUsage": 80.0,
          "MemoryUsage": 85.0
        }
      },
      "SGX": {
        "Enabled": true,
        "SimulationMode": false,
        "ProductionMode": true,
        "EnclaveLibraryPath": "/opt/intel/sgxsdk/lib64/libsgx_urts.so",
        "AttestationRequired": true,
        "RemoteAttestationUrl": "https://api.trustedservices.intel.com/sgx/dev/attestation/v3"
      },
      "AI": {
        "Enabled": true,
        "ModelsPath": "/secure/ai_models",
        "ProductionModels": true,
        "ModelValidation": true,
        "SecureInference": true,
        "EnableModelEncryption": true,
        "RequireAttestationForInference": true,
        "MaxConcurrentInferences": 50
      },
      "Security": {
        "EnableRateLimiting": true,
        "MaxRequestsPerMinute": 1000,
        "EnableRequestValidation": true,
        "RequireHttps": true,
        "EnableCors": false,
        "AllowedOrigins": [],
        "EnableApiKeyAuthentication": true,
        "RequireClientCertificates": true,
        "EnableAuditLogging": true
      },
      "Backup": {
        "Enabled": true,
        "BackupInterval": "0 2 * * *",
        "RetentionDays": 90,
        "EncryptBackups": true,
        "BackupLocation": "/secure/backups",
        "RemoteBackupEnabled": true,
        "RemoteBackupUrl": "${BACKUP_SERVICE_URL}"
      }
    },
    "Blockchain": {
      "NeoN3": {
        "RpcEndpoint": "https://mainnet1.neo.coz.io:443",
        "NetworkMagic": 860833102,
        "AddressVersion": 53,
        "ChainId": "neo3",
        "Enabled": true,
        "MaxConnectionsPerServer": 20,
        "RequestTimeout": 30000,
        "FallbackEndpoints": [
          "https://mainnet2.neo.coz.io:443",
          "https://rpc.neobase.one:443"
        ]
      },
      "NeoX": {
        "RpcEndpoint": "https://mainnet.rpc.banelabs.org",
        "ChainId": 47763,
        "NetworkName": "Neo X MainNet",
        "Enabled": true,
        "MaxConnectionsPerServer": 20,
        "RequestTimeout": 30000,
        "GasPrice": "0x2540be400",
        "GasLimit": "0x1c9c380",
        "FallbackEndpoints": [
          "https://mainnet.rpc.banelabs.org",
          "https://neo-x-mainnet.blockpi.network/v1/rpc/public"
        ]
      }
    },
    "Integrations": {
      "ExternalApis": {
        "CoinGecko": {
          "ApiKey": "${COINGECKO_API_KEY}",
          "RateLimit": 50,
          "Timeout": 5000
        },
        "CoinMarketCap": {
          "ApiKey": "${COINMARKETCAP_API_KEY}",
          "RateLimit": 333,
          "Timeout": 5000
        }
      },
      "Webhooks": {
        "Enabled": true,
        "SignatureValidation": true,
        "MaxRetries": 3,
        "RetryInterval": 5000
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/neo-service-layer/neo-service-layer-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "${SEQ_SERVER_URL}",
          "apiKey": "${SEQ_API_KEY}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "HealthChecks": {
    "UI": {
      "Enabled": true,
      "Path": "/health-ui",
      "RequireAuthentication": true
    },
    "Checks": {
      "Database": {
        "Enabled": true,
        "Timeout": "00:00:30"
      },
      "SGXEnclave": {
        "Enabled": true,
        "Timeout": "00:00:10"
      },
      "ExternalServices": {
        "Enabled": true,
        "Timeout": "00:00:15"
      }
    }
  }
} 