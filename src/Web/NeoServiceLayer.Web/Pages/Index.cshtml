    <script>
        // Page-specific functions
        function scrollToSection(sectionId) {
            document.getElementById(sectionId).scrollIntoView({ 
                behavior: 'smooth' 
            });
        }
        
        function exploreServices(category) {
            window.location.href = `/services#${category}`;
        }
        
        async function getDemoToken() {
            const resultDiv = document.getElementById('demo-result');
            resultDiv.style.display = 'block';
            resultDiv.innerHTML = '<div class="loading-spinner mx-auto"></div>';
            
            try {
                const response = await fetch('/api/auth/demo-token', { method: 'POST' });
                const data = await response.json();
                
                resultDiv.innerHTML = `
                    <div class="text-success mb-2">
                        <i class="fas fa-check-circle"></i> Token Generated Successfully
                    </div>
                    <div class="small mb-2"><strong>Token:</strong></div>
                    <div class="text-break text-info">${data.token}</div>
                    <div class="small mt-2"><strong>Expires:</strong> ${new Date(data.expires).toLocaleString()}</div>
                    <button class="btn-neo btn-outline btn-sm mt-2" onclick="copyToClipboard('${data.token}')">
                        <i class="fas fa-copy"></i> Copy Token
                    </button>
                `;
            } catch (error) {
                resultDiv.innerHTML = `
                    <div class="text-danger">
                        <i class="fas fa-exclamation-triangle"></i> Error: ${error.message}
                    </div>
                `;
            }
        }
        
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                window.neoApp.showToast('Token copied to clipboard!', 'success');
            });
        }
        
        // Update connection status
        setTimeout(() => {
            document.getElementById('connection-status').innerHTML = 
                '<i class="fas fa-check-circle text-success"></i> All services online';
        }, 2000);
    </script>
