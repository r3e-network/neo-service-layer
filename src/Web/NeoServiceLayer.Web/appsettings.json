{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "SuperSecretKeyThatIsTotallyLongEnoughForJWTTokenGenerationAndSigning2024ProductionReadyCompliantWith256BitMinimumRequirementAndMoreCharacters!",
    "Issuer": "NeoServiceLayer",
    "Audience": "NeoServiceLayerUsers",
    "ExpiryInHours": 24
  },
  "NeoServiceLayer": {
    "EnableMockServices": false,
    "ProductionMode": true,
    "Database": {
      "ConnectionString": "Data Source=neo_service_layer.db",
      "DatabaseType": "SQLite"
    },
    "Blockchain": {
      "NeoN3": {
        "RpcEndpoint": "https://mainnet1.neo.coz.io:443",
        "NetworkMagic": 860833102,
        "AddressVersion": 53,
        "ChainId": "neo3",
        "Enabled": true,
        "MaxConnectionsPerServer": 10,
        "RequestTimeout": 30000
      },
      "NeoX": {
        "RpcEndpoint": "https://mainnet.rpc.banelabs.org",
        "ChainId": 47763,
        "NetworkName": "Neo X MainNet",
        "Enabled": true,
        "MaxConnectionsPerServer": 10,
        "RequestTimeout": 30000,
        "GasPrice": "0x2540be400",
        "GasLimit": "0x1c9c380"
      }
    },
    "Services": {
      "KeyManagement": {
        "Enabled": true,
        "UseHardwareSecurityModule": true,
        "KeyStorePath": "keys",
        "EncryptionRequired": true,
        "BackupEnabled": true,
        "AuditLogging": true
      },
      "AI": {
        "Enabled": true,
        "ModelsPath": "ai_models",
        "ProductionModels": true,
        "ModelValidation": true,
        "SecureInference": true
      },
      "SGX": {
        "Enabled": true,
        "SimulationMode": false,
        "ProductionMode": true,
        "EnclaveLibraryPath": "./enclave/neo_service_layer_enclave.signed.so",
        "AttestationRequired": true
      },
      "Oracle": {
        "Enabled": true,
        "DataSources": [
          "https://api.coingecko.com/api/v3",
          "https://api.coinmarketcap.com/v1",
          "https://min-api.cryptocompare.com/data"
        ],
        "UpdateInterval": 30000,
        "ValidationRequired": true
      },
      "Monitoring": {
        "Enabled": true,
        "MetricsCollectionInterval": 5000,
        "HealthCheckInterval": 10000,
        "AlertingEnabled": true,
        "LogRetentionDays": 30
      }
    }
  }
} 