{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Async", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "System": "Warning",
        "NeoServiceLayer": "Debug"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName", "WithThreadId", "WithCorrelationId" ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <{SourceContext}>{NewLine}{Exception}"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "${LOG_FILE_PATH:-logs/neo-service-layer-.txt}",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 30,
                "fileSizeLimitBytes": 1073741824,
                "rollOnFileSizeLimit": true,
                "shared": true,
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] [{CorrelationId}] {Message:lj}{NewLine}{Exception}"
              }
            }
          ],
          "bufferSize": 100000
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "${LOG_FILE_PATH:-logs/neo-service-layer-errors-.txt}",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 90,
                "restrictedToMinimumLevel": "Error",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] [{CorrelationId}] {Message:lj}{NewLine}{Exception}{NewLine}{Properties:j}"
              }
            }
          ]
        }
      }
    ],
    "Properties": {
      "Application": "NeoServiceLayer",
      "Environment": "Production",
      "Version": "1.0.0"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      },
      "Https": {
        "Url": "https://0.0.0.0:5001",
        "Certificate": {
          "Path": "${SSL_CERT_PATH:-/etc/ssl/certs/neo-service-layer.pfx}",
          "Password": "${SSL_CERT_PASSWORD}"
        }
      }
    },
    "Limits": {
      "MaxConcurrentConnections": 1000,
      "MaxConcurrentUpgradedConnections": 100,
      "MaxRequestBodySize": 10485760,
      "KeepAliveTimeout": "00:02:00",
      "RequestHeadersTimeout": "00:00:30"
    }
  },
  "Jwt": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "${JWT_ISSUER:-neo-service-layer}",
    "Audience": "${JWT_AUDIENCE:-neo-service-layer-clients}",
    "ExpirationMinutes": "${JWT_EXPIRATION_MINUTES:-60}",
    "RefreshExpirationMinutes": "${JWT_REFRESH_EXPIRATION_MINUTES:-10080}",
    "ClockSkewMinutes": 5,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true,
    "RequireExpirationTime": true,
    "RequireSignedTokens": true
  },
  "RateLimiting": {
    "General": {
      "PermitLimit": 1000,
      "Window": "00:01:00",
      "QueueLimit": 100
    },
    "KeyManagement": {
      "PermitLimit": 100,
      "Window": "00:01:00",
      "QueueLimit": 10
    },
    "AI": {
      "PermitLimit": 200,
      "Window": "00:01:00",
      "QueueLimit": 20
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "${CORS_ALLOWED_ORIGINS}"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "OPTIONS"
    ],
    "AllowedHeaders": [
      "Content-Type",
      "Authorization",
      "X-Requested-With",
      "Accept",
      "Origin"
    ],
    "AllowCredentials": true,
    "MaxAge": 3600
  },
  "Blockchain": {
    "NeoN3": {
      "RpcUrl": "${NEO_N3_RPC_URL}",
      "NetworkMagic": 860833102,
      "AddressVersion": 53,
      "MaxConnectionsPerServer": 10,
      "Timeout": "00:00:30",
      "RetryAttempts": 3,
      "RetryDelay": "00:00:02"
    },
    "NeoX": {
      "RpcUrl": "${NEO_X_RPC_URL}",
      "ChainId": 12227332,
      "NetworkName": "NeoX MainNet",
      "MaxConnectionsPerServer": 10,
      "Timeout": "00:00:30",
      "RetryAttempts": 3,
      "RetryDelay": "00:00:02"
    }
  },
  "KeyManagement": {
    "MaxKeyCount": 10000,
    "SupportedKeyTypes": [
      "Secp256k1",
      "Ed25519",
      "RSA2048",
      "RSA4096"
    ],
    "KeyRotationIntervalDays": 90,
    "EnableHardwareSecurityModule": true,
    "EncryptionAlgorithm": "AES-256-GCM",
    "BackupEnabled": true,
    "BackupInterval": "24:00:00"
  },
  "Oracle": {
    "MaxDataSources": 1000,
    "DataRefreshIntervalSeconds": 30,
    "RequestTimeoutSeconds": 15,
    "MaxConcurrentRequests": 100,
    "CacheExpirationMinutes": 5,
    "EnableDataValidation": true,
    "RequiredConfirmations": 3
  },
  "Storage": {
    "MaxStorageSizeBytes": 107374182400,
    "EncryptionAlgorithm": "AES-256-GCM",
    "EnableCompression": true,
    "CompressionLevel": "Optimal",
    "BackupEnabled": true,
    "BackupInterval": "12:00:00",
    "RetentionDays": 365
  },
  "Voting": {
    "MaxActiveProposals": 500,
    "DefaultVotingPeriodHours": 168,
    "MinimumQuorumPercentage": 0.1,
    "EnableDelegatedVoting": true,
    "MaxVotesPerUser": 1000,
    "VoteWeightingEnabled": true
  },
  "Compliance": {
    "EnabledRules": [
      "AML",
      "KYC",
      "GDPR",
      "SOX",
      "PCI-DSS"
    ],
    "AuditLogRetentionDays": 365,
    "EnableRealTimeMonitoring": true,
    "AlertThresholds": {
      "SuspiciousTransactionAmount": 10000,
      "FailedLoginAttempts": 5,
      "UnusualActivityScore": 0.8
    },
    "ReportingInterval": "24:00:00"
  },
  "CrossChain": {
    "SupportedChains": [
      "NeoN3",
      "NeoX",
      "Ethereum",
      "Bitcoin"
    ],
    "BridgeContracts": {
      "NeoN3": "${NEO_N3_BRIDGE_CONTRACT}",
      "NeoX": "${NEO_X_BRIDGE_CONTRACT}",
      "Ethereum": "${ETH_BRIDGE_CONTRACT}"
    },
    "ConfirmationBlocks": 12,
    "MaxTransferAmount": 1000000,
    "FeePercentage": 0.001
  },
  "Automation": {
    "MaxActiveWorkflows": 1000,
    "ExecutionIntervalSeconds": 30,
    "EnableParallelExecution": true,
    "MaxConcurrentExecutions": 50,
    "WorkflowTimeoutMinutes": 30,
    "EnableScheduledTasks": true
  },
  "Health": {
    "HealthCheckIntervalSeconds": 30,
    "UnhealthyThreshold": 3,
    "EnableDetailedReports": false,
    "TimeoutSeconds": 10,
    "EnableDependencyChecks": true,
    "CriticalServices": [
      "Database",
      "Blockchain",
      "KeyManagement",
      "Storage"
    ]
  },
  "Monitoring": {
    "MetricsIntervalSeconds": 15,
    "MetricsRetentionDays": 90,
    "EnablePerformanceMonitoring": true,
    "EnableMemoryMonitoring": true,
    "EnableNetworkMonitoring": true,
    "AlertingEnabled": true,
    "PrometheusEnabled": true,
    "PrometheusPort": 9090
  },
  "Notification": {
    "EnabledChannels": [
      "Email",
      "Webhook",
      "Slack"
    ],
    "RetryAttempts": 5,
    "BatchSize": 1000,
    "QueueSize": 10000,
    "ProcessingIntervalSeconds": 10,
    "EmailSettings": {
      "SmtpServer": "${SMTP_SERVER}",
      "SmtpPort": 587,
      "Username": "${SMTP_USERNAME}",
      "Password": "${SMTP_PASSWORD}",
      "EnableSsl": true,
      "FromAddress": "${NOTIFICATION_FROM_EMAIL}"
    },
    "SlackSettings": {
      "WebhookUrl": "${SLACK_WEBHOOK_URL}",
      "Channel": "#neo-service-alerts",
      "Username": "Neo Service Layer"
    }
  },
  "EventSubscription": {
    "MaxSubscriptions": 10000,
    "EventBufferSize": 100000,
    "SubscriptionTimeoutSeconds": 300,
    "EnableEventPersistence": true,
    "EventRetentionDays": 30,
    "MaxEventsPerSecond": 1000
  },
  "Randomness": {
    "EntropySources": [
      "Hardware",
      "Blockchain",
      "External",
      "System"
    ],
    "MinimumEntropyBits": 256,
    "EnableBiasTesting": true,
    "RandomnessPoolSize": 1024,
    "RefreshIntervalSeconds": 60
  },
  "Compute": {
    "MaxConcurrentComputations": 100,
    "ComputationTimeoutSeconds": 300,
    "MemoryLimitMB": 4096,
    "CpuLimitPercentage": 80,
    "EnableGpuAcceleration": false,
    "MaxQueueSize": 1000
  },
  "ProofOfReserve": {
    "ProofIntervalHours": 24,
    "SupportedAssets": [
      "NEO",
      "GAS",
      "ETH",
      "BTC",
      "USDT",
      "USDC"
    ],
    "EnableAutomaticProofs": true,
    "RequiredConfirmations": 6,
    "AuditTrailEnabled": true
  },
  "AI": {
    "ModelCacheSize": 50,
    "InferenceTimeoutSeconds": 60,
    "EnableGpuAcceleration": true,
    "MaxConcurrentInferences": 100,
    "ModelUpdateIntervalHours": 24,
    "EnableModelVersioning": true,
    "PatternRecognition": {
      "FraudDetectionThreshold": 0.8,
      "AnomalyDetectionSensitivity": 0.7,
      "ModelRetrainingInterval": "168:00:00"
    },
    "Prediction": {
      "MinConfidenceThreshold": 0.6,
      "MaxPredictionHorizonDays": 30,
      "EnableEnsembleMethods": true
    }
  },
  "ZeroKnowledge": {
    "SupportedProofSystems": [
      "SNARK",
      "STARK",
      "Bulletproof",
      "PLONK"
    ],
    "CircuitCacheSize": 500,
    "ProofTimeoutSeconds": 300,
    "EnableProofBatching": true,
    "MaxProofSize": 1048576,
    "VerificationCacheSize": 1000
  },
  "FairOrdering": {
    "OrderingAlgorithm": "TimeWeightedFair",
    "BatchSize": 1000,
    "OrderingIntervalMs": 100,
    "EnablePriorityQueues": true,
    "MaxQueueDepth": 10000,
    "FairnessMetricsEnabled": true
  },
  "Tee": {
    "EnclaveType": "SGX",
    "AttestationServiceUrl": "${TEE_ATTESTATION_URL}",
    "EnableRemoteAttestation": true,
    "AttestationCacheMinutes": 60,
    "MaxEnclaveInstances": 10,
    "EnclaveHealthCheckInterval": "00:05:00"
  },
  "Security": {
    "EnableSecurityHeaders": true,
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'",
    "EnableHsts": true,
    "HstsMaxAge": 31536000,
    "EnableXssProtection": true,
    "EnableContentTypeNoSniff": true,
    "EnableReferrerPolicy": true,
    "ReferrerPolicy": "strict-origin-when-cross-origin"
  },
  "Performance": {
    "EnableResponseCompression": true,
    "EnableResponseCaching": true,
    "CacheDurationSeconds": 300,
    "EnableOutputCaching": true,
    "MaxCacheSize": 104857600,
    "EnableConnectionPooling": true
  },
  "Database": {
    "ConnectionString": "${DATABASE_CONNECTION_STRING}",
    "CommandTimeout": 30,
    "MaxRetryCount": 3,
    "MaxRetryDelay": "00:00:30",
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "PoolSize": 100
  },
  "Redis": {
    "ConnectionString": "${REDIS_CONNECTION_STRING}",
    "Database": 0,
    "ConnectTimeout": 5000,
    "SyncTimeout": 5000,
    "AbortOnConnectFail": false,
    "ConnectRetry": 3
  },
  "MessageQueue": {
    "Provider": "RabbitMQ",
    "ConnectionString": "${RABBITMQ_CONNECTION_STRING}",
    "ExchangeName": "neo-service-layer",
    "QueuePrefix": "nsl",
    "EnableDurableQueues": true,
    "PrefetchCount": 100,
    "RetryAttempts": 3
  }
} 