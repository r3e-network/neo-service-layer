<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>NeoServiceLayer.SDK</RootNamespace>
    <AssemblyName>NeoServiceLayer.SDK</AssemblyName>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>NeoServiceLayer.SDK</PackageId>
    <Version>1.0.0</Version>
    <Authors>Neo Service Layer Team</Authors>
    <Description>SDK for Neo Service Layer microservices</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/neo-service-layer/sdk</PackageProjectUrl>
    <RepositoryUrl>https://github.com/neo-service-layer/sdk</RepositoryUrl>
    <PackageTags>neo;blockchain;microservices;sdk</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Http" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
    <PackageReference Include="Polly.Extensions.Http" />
    <PackageReference Include="Microsoft.Extensions.Http.Polly" />
    <PackageReference Include="System.Text.Json" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\NeoServiceLayer.Core\NeoServiceLayer.Core.csproj" />
    <ProjectReference Include="..\..\Infrastructure\NeoServiceLayer.Infrastructure.ServiceDiscovery\NeoServiceLayer.Infrastructure.ServiceDiscovery.csproj" />
  </ItemGroup>

</Project>