# Neo Service Layer Production Environment Variables
# Copy this file to .env.production and fill in the actual values
# NEVER commit the actual .env.production file to source control

# ===== CRITICAL SECURITY CONFIGURATION =====
# JWT Secret Key - Must be at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET_KEY=CHANGE_ME_TO_SECURE_RANDOM_VALUE

# Certificate Password for SSL/TLS
CERT_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# ===== DATABASE CONFIGURATION =====
DB_HOST=postgres
DB_PORT=5432
DB_NAME=neoservicelayer
DB_USER=neoservice_app
DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Database connection string (alternative to individual settings)
DB_CONNECTION_STRING=Host=postgres;Port=5432;Database=neoservicelayer;Username=neoservice_app;Password=CHANGE_ME

# ===== REDIS CACHE CONFIGURATION =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
REDIS_CONNECTION_STRING=redis:6379,password=CHANGE_ME,ssl=true

# ===== NEO BLOCKCHAIN CONFIGURATION =====
NEO_N3_RPC=https://seed1.neo.org:10331
NEO_N3_NETWORK_ID=860833102
NEO_X_RPC=https://mainnet.neo-x.org
NEO_X_CHAIN_ID=47763

# ===== SGX CONFIGURATION =====
SGX_ATTESTATION_URL=https://api.trustedservices.intel.com/sgx/attestation/v4/
SGX_MEASUREMENT_1=CHANGE_ME_TO_ACTUAL_MEASUREMENT
SGX_MEASUREMENT_2=CHANGE_ME_TO_ACTUAL_MEASUREMENT

# ===== AWS S3 STORAGE =====
S3_BUCKET_NAME=neo-service-layer-production
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME

# ===== MONITORING & OBSERVABILITY =====
OTEL_EXPORTER_ENDPOINT=http://otel-collector:4317
OTEL_API_KEY=CHANGE_ME

# ===== AUTHENTICATION =====
JWT_ISSUER=https://neo-service-layer.io
JWT_AUDIENCE=https://neo-service-layer.io/api

# ===== CORS CONFIGURATION =====
CORS_ALLOWED_ORIGINS=https://app.neo-service-layer.io,https://admin.neo-service-layer.io

# ===== NOTIFICATION SERVICES =====
SMTP_SERVER=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=CHANGE_ME_TO_SENDGRID_API_KEY
NOTIFICATION_FROM_EMAIL=noreply@neo-service-layer.io

# ===== SLACK INTEGRATION =====
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/CHANGE_ME

# ===== BACKUP CONFIGURATION =====
BACKUP_S3_BUCKET=neo-service-layer-backups
BACKUP_RETENTION_DAYS=30

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MINUTES=1
RATE_LIMIT_MAX_REQUESTS=1000

# ===== FEATURE FLAGS =====
ENABLE_SWAGGER=false
ENABLE_DETAILED_ERRORS=false
ENABLE_SENSITIVE_DATA_LOGGING=false

# ===== PERFORMANCE TUNING =====
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT_SECONDS=30
MAX_REQUEST_BODY_SIZE_MB=100

# ===== SECURITY HEADERS =====
ENABLE_HSTS=true
HSTS_MAX_AGE_SECONDS=31536000
ENABLE_SECURITY_HEADERS=true