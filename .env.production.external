# External Service Configuration for Production
# This file contains configurations for external services that need to be manually set

# Intel SGX Configuration
IAS_API_KEY=YOUR_PRODUCTION_IAS_API_KEY_FROM_INTEL

# Email Service Configuration (Example for SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
SMTP_USE_SSL=true
SMTP_FROM_ADDRESS=noreply@your-production-domain.com
SMTP_FROM_NAME=Neo Service Layer

# AWS Configuration (If using AWS for backups)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
BACKUP_S3_BUCKET=neo-service-layer-production-backups

# Azure Configuration (If using Azure Key Vault)
AZURE_KEY_VAULT_URL=https://your-production-keyvault.vault.azure.net/
AZURE_TENANT_ID=YOUR_PRODUCTION_TENANT_ID
AZURE_CLIENT_ID=YOUR_PRODUCTION_CLIENT_ID
AZURE_CLIENT_SECRET=YOUR_PRODUCTION_CLIENT_SECRET

# Production Blockchain Endpoints
NEO_N3_RPC_URL=https://mainnet1.neo.coz.io:443
NEO_X_RPC_URL=https://mainnet.neox.org:443

# Alternative Neo N3 Endpoints (for redundancy)
# NEO_N3_RPC_URL=https://mainnet2.neo.coz.io:443
# NEO_N3_RPC_URL=https://mainnet3.neo.coz.io:443
# NEO_N3_RPC_URL=https://seed1.neo.org:443

# Production CORS Origins
ALLOWED_ORIGINS=https://your-production-domain.com,https://api.your-production-domain.com

# Production Consul Configuration
CONSUL_DATACENTER=production-dc1

# SSL Certificate Path (for production certificate)
CERTIFICATE_PATH=/path/to/production/certificate.pfx

# Domain Configuration
DOMAIN_NAME=your-production-domain.com
API_DOMAIN=api.your-production-domain.com

# Monitoring Webhook (for alerts)
ALERT_WEBHOOK_URL=https://your-monitoring-system.com/webhook
PAGERDUTY_INTEGRATION_KEY=YOUR_PAGERDUTY_KEY