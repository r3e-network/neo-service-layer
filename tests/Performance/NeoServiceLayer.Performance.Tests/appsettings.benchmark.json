{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "System": "Warning",
      "BenchmarkDotNet": "Information"
    },
    "Console": {
      "IncludeScopes": false,
      "TimestampFormat": "[yyyy-MM-dd HH:mm:ss] "
    }
  },
  "Caching": {
    "Memory": {
      "SizeLimit": 104857600,
      "CompactionPercentage": 0.25
    },
    "MemoryCacheService": {
      "DefaultExpiration": "00:30:00",
      "KeyPrefix": "BENCH",
      "MaxSize": 104857600,
      "DefaultItemSize": 1024
    },
    "Distributed": {
      "Type": "memory",
      "DefaultExpiration": "00:30:00",
      "KeyPrefix": "BENCH_DIST"
    }
  },
  "BenchmarkConfiguration": {
    "WarmupCount": 3,
    "IterationCount": 10,
    "InvocationCount": 100,
    "UnrollFactor": 1,
    "EnableMemoryDiagnoser": true,
    "EnableStatisticColumns": true,
    "ExportFormats": [
      "json",
      "markdown",
      "csv",
      "html"
    ]
  },
  "PerformanceThresholds": {
    "CachingBenchmarks": {
      "MemoryCache_Get_1000_MaxTimeMs": 5.0,
      "MemoryCache_Set_1000_MaxTimeMs": 10.0,
      "MemoryCache_GetMany_1000_MaxTimeMs": 8.0,
      "DistributedCache_Get_1000_MaxTimeMs": 50.0,
      "DistributedCache_Set_1000_MaxTimeMs": 100.0,
      "MinHitRatio": 0.95
    },
    "PatternRecognitionBenchmarks": {
      "SequencePatternAnalysis_1000_MaxTimeMs": 100.0,
      "AnomalyDetectionAnalysis_1000_MaxTimeMs": 150.0,
      "TrendAnalysis_1000_MaxTimeMs": 120.0,
      "BehavioralPatternAnalysis_1000_MaxTimeMs": 200.0,
      "MultiPatternOrchestration_1000_MaxTimeMs": 300.0,
      "MaxMemoryUsageMB": 50.0
    },
    "AutomationServiceBenchmarks": {
      "JobCreation_100_MaxTimeMs": 50.0,
      "JobScheduling_100_MaxTimeMs": 75.0,
      "ConditionEvaluation_100_MaxTimeMs": 30.0,
      "ConcurrentJobProcessing_100_MaxTimeMs": 200.0,
      "MinSuccessRate": 0.95,
      "MaxMemoryUsageMB": 25.0
    }
  },
  "RegressionTestConfiguration": {
    "BaselineMetricsFile": "baseline-metrics.json",
    "TolerancePercentages": {
      "ResponseTime": 0.15,
      "Throughput": -0.10,
      "MemoryUsage": 0.20,
      "CpuUtilization": 0.15
    },
    "MinimumThresholds": {
      "CacheHitRatio": 0.80,
      "PatternAccuracy": 0.80,
      "AutomationReliability": 0.95
    }
  },
  "TestDataConfiguration": {
    "DefaultTimeSeriesSize": 1000,
    "DefaultAnomalyRate": 0.05,
    "DefaultCacheItemSize": 1024,
    "MaxConcurrentOperations": 100,
    "TestDataSeed": 42
  }
}