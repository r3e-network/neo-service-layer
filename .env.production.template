# Neo Service Layer Production Environment Configuration
# This file is a template. Use generate-secure-credentials.sh to create .env.production

# Environment
ASPNETCORE_ENVIRONMENT=Production
NODE_ENV=production

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=neo_service_layer
DB_USER=neo_service_user
DB_PASSWORD=CHANGE_ME_USE_SCRIPT

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_USE_SCRIPT
REDIS_SSL=false
REDIS_MAX_MEMORY=2gb
REDIS_EVICTION_POLICY=allkeys-lru

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=neo_service_user
RABBITMQ_PASSWORD=CHANGE_ME_USE_SCRIPT
RABBITMQ_VHOST=/
RABBITMQ_ERLANG_COOKIE=CHANGE_ME_USE_SCRIPT

# JWT Configuration
JWT_SECRET_KEY=CHANGE_ME_USE_SCRIPT
JWT_ISSUER=neo-service-layer
JWT_AUDIENCE=neo-service-layer-clients
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_MINUTES=10080
JWT_CLOCK_SKEW_MINUTES=5

# Consul Configuration
CONSUL_PORT=8500
CONSUL_ENCRYPT_KEY=CHANGE_ME_USE_SCRIPT
CONSUL_HTTP_TOKEN=CHANGE_ME_USE_SCRIPT

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_USE_SCRIPT
JAEGER_UI_PORT=16686

# API Gateway Configuration
API_HTTP_PORT=80
API_HTTPS_PORT=443
CERTIFICATE_PASSWORD=CHANGE_ME_USE_SCRIPT

# Intel SGX Configuration
SGX_MODE=HW
SGX_DEBUG=false
IAS_API_KEY=YOUR_IAS_API_KEY_HERE

# Service Configuration
ENABLE_API_KEY_AUTH=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
CIRCUIT_BREAKER_ENABLED=true

# Security Configuration
REQUIRE_HTTPS=true
ENABLE_SECURITY_HEADERS=true
ALLOWED_ORIGINS=https://your-domain.com,https://api.your-domain.com

# Blockchain Configuration
NEO_N3_RPC_URL=https://your-neo-n3-node.com:10332
NEO_X_RPC_URL=https://your-neo-x-node.com:10332

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-email@your-domain.com
SMTP_PASSWORD=YOUR_EMAIL_PASSWORD
SMTP_USE_SSL=true
SMTP_FROM_ADDRESS=noreply@your-domain.com
SMTP_FROM_NAME=Neo Service Layer

# AWS Configuration (optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
BACKUP_S3_BUCKET=neo-service-layer-backups

# Azure Configuration (optional)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_TENANT_ID=YOUR_TENANT_ID
AZURE_CLIENT_ID=YOUR_CLIENT_ID
AZURE_CLIENT_SECRET=YOUR_CLIENT_SECRET

# Logging Configuration
LOG_LEVEL=Information
LOG_RETENTION_DAYS=30
ENABLE_STRUCTURED_LOGGING=true
ENABLE_SECURITY_LOGGING=true

# Performance Configuration
ENABLE_RESPONSE_COMPRESSION=true
ENABLE_REQUEST_BUFFERING=false
MAX_REQUEST_SIZE_MB=10

# Service Replicas
NOTIFICATION_SERVICE_REPLICAS=2
STORAGE_SERVICE_REPLICAS=3
KEY_MANAGEMENT_SERVICE_REPLICAS=2
ORACLE_SERVICE_REPLICAS=2
COMPUTE_SERVICE_REPLICAS=3

# Feature Flags
ENABLE_AI_SERVICES=true
ENABLE_CROSS_CHAIN=true
ENABLE_ZERO_KNOWLEDGE=true
ENABLE_SOCIAL_RECOVERY=true