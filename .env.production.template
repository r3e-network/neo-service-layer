# Neo Service Layer Production Environment Configuration
# Copy this file to .env.production and fill in the values
# NEVER commit the actual .env.production file to version control

# Environment
ASPNETCORE_ENVIRONMENT=Production

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=neoservice_prod
DB_USER=neoservice_user
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
REDIS_SSL=false
REDIS_MAX_MEMORY=2gb
REDIS_EVICTION_POLICY=allkeys-lru

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=neoservice_rmq
RABBITMQ_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
RABBITMQ_VHOST=/
RABBITMQ_ERLANG_COOKIE=CHANGE_THIS_TO_SECURE_COOKIE

# JWT Configuration
JWT_SECRET_KEY=CHANGE_THIS_TO_AT_LEAST_64_CHAR_SECURE_KEY
JWT_ISSUER=neo-service-layer-prod
JWT_AUDIENCE=neo-service-layer-clients
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_MINUTES=10080

# Consul Configuration
CONSUL_PORT=8500
CONSUL_ENCRYPT_KEY=CHANGE_THIS_TO_BASE64_ENCODED_16_BYTE_KEY
CONSUL_HTTP_TOKEN=CHANGE_THIS_TO_SECURE_TOKEN

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
JAEGER_UI_PORT=16686

# API Gateway
API_HTTP_PORT=80
API_HTTPS_PORT=443
CERTIFICATE_PASSWORD=CHANGE_THIS_TO_CERTIFICATE_PASSWORD

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=CHANGE_THIS_TO_SENDGRID_API_KEY
SMTP_USE_SSL=true

# Service Replicas
NOTIFICATION_SERVICE_REPLICAS=2
STORAGE_SERVICE_REPLICAS=3
KEYMANAGEMENT_SERVICE_REPLICAS=2

# Security
ENABLE_API_KEY_AUTH=true
API_KEY_HEADER=X-API-Key

# Intel SGX Configuration
SGX_MODE=HW
SGX_ENCLAVE_PATH=/opt/intel/sgx-aesm-service/aesm
IAS_API_KEY=CHANGE_THIS_TO_INTEL_IAS_API_KEY

# Azure Key Vault (if using)
AZURE_KEY_VAULT_URI=https://your-keyvault.vault.azure.net/
AZURE_TENANT_ID=CHANGE_THIS_TO_AZURE_TENANT_ID
AZURE_CLIENT_ID=CHANGE_THIS_TO_AZURE_CLIENT_ID
AZURE_CLIENT_SECRET=CHANGE_THIS_TO_AZURE_CLIENT_SECRET

# AWS Secrets Manager (if using)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_THIS_TO_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_THIS_TO_AWS_SECRET_KEY

# Blockchain Configuration
NEO_N3_RPC_URL=https://mainnet.neo.org
NEO_N3_NETWORK_MAGIC=860833102
NEOX_RPC_URL=https://mainnet.neox.org
NEOX_CHAIN_ID=12227332

# Rate Limiting
API_RATE_LIMIT_PERMIT_LIMIT=1000
API_RATE_LIMIT_WINDOW_MINUTES=1
KEY_MANAGEMENT_RATE_LIMIT_PERMIT_LIMIT=100
KEY_MANAGEMENT_RATE_LIMIT_WINDOW_MINUTES=1

# CORS (comma-separated list)
CORS_ALLOWED_ORIGINS=https://app.yourdomain.com,https://api.yourdomain.com

# Logging
LOG_LEVEL=Information
LOG_RETENTION_DAYS=30

# Performance
MAX_REQUEST_BODY_SIZE=33554432
REQUEST_TIMEOUT_SECONDS=30
COMPUTATION_TIMEOUT_SECONDS=300
MAX_CONCURRENT_COMPUTATIONS=10