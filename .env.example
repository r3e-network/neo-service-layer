# Neo Service Layer Environment Variables
# Copy this file to .env and fill in the values

# JWT Configuration (REQUIRED)
# Generate a secure key with: openssl rand -base64 32
# SECURITY WARNING: Never commit actual secrets to version control
JWT_SECRET_KEY=

# Intel Attestation Service (IAS) API Key
# Get your API key from: https://api.portal.trustedservices.intel.com/EPID-attestation
IAS_API_KEY=your-ias-api-key

# Configuration Encryption Key
# Generate a secure key with: openssl rand -base64 32
CONFIG_ENCRYPTION_KEY=your-config-encryption-key

# SGX Mode (HW for hardware, SW for simulation)
SGX_MODE=SW

# Blockchain RPC URLs (optional - defaults to localhost)
# NEO_N3_RPC_URL=http://localhost:20332
# NEO_X_RPC_URL=http://localhost:8545

# Social Recovery Contract Addresses (for production)
# SOCIAL_RECOVERY_CONTRACT_NEO_N3=0x...
# SOCIAL_RECOVERY_CONTRACT_NEO_X=0x...

# Database Connection (optional - defaults to SQLite)
# CONNECTION_STRING=Data Source=neoservicelayer.db

# API Rate Limiting (optional)
# RATE_LIMIT_PERMIT_LIMIT=100
# RATE_LIMIT_WINDOW_MINUTES=1

# CORS Origins (optional - comma separated)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3001

# Log Level (optional - Debug, Information, Warning, Error, Critical)
# LOG_LEVEL=Information

# Telemetry Configuration (optional)
# OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces
# OTEL_SERVICE_NAME=NeoServiceLayer
# OTEL_SERVICE_VERSION=1.0.0