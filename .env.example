# Neo Service Layer Environment Configuration
# Copy this file to .env.dev, .env.staging, or .env.production and fill in the values

# Required Security Keys
JWT_SECRET_KEY=your-jwt-secret-key-here-minimum-256-bits
DB_PASSWORD=your-secure-database-password

# Neo Blockchain Configuration
NEO_N3_RPC=http://seed1.neo.org:10332
NEO_X_RPC=http://neox.example.com:10332

# Monitoring (Production only)
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-grafana-admin-password

# Optional Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
REDIS_PASSWORD=your-redis-password
SGX_MODE=HW # or SIM for simulation

# Performance Tuning
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL_SECONDS=300
REQUEST_TIMEOUT_SECONDS=30

# Logging
LOG_LEVEL=Information # Trace, Debug, Information, Warning, Error, Critical
LOG_OUTPUT_PATH=/app/logs

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_HEALTH_UI=true
ENABLE_METRICS=true
ENABLE_TRACING=true
