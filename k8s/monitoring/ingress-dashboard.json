{
  "dashboard": {
    "id": null,
    "uid": "nginx-ingress-tls",
    "title": "NGINX Ingress Controller - TLS Monitoring",
    "tags": ["nginx", "ingress", "tls", "kubernetes"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate by Host",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(nginx_ingress_controller_requests[5m])) by (host)",
            "legendFormat": "{{host}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "SSL Certificate Expiry",
        "type": "table",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "(nginx_ingress_controller_ssl_expire_time_seconds - time()) / 86400",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "host": "Host",
                "Value": "Days Until Expiry"
              }
            }
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Status Codes",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(nginx_ingress_controller_requests[5m])) by (status)",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "TLS Protocol Versions",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(nginx_ingress_controller_ssl_protocol_count[5m])) by (protocol)",
            "legendFormat": "{{protocol}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Request Latency (P95)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(nginx_ingress_controller_request_duration_seconds_bucket[5m])) by (host, le))",
            "legendFormat": "{{host}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": {"x": 12, "y": 16, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(nginx_ingress_controller_nginx_process_connections{state=\"active\"})"
          }
        ]
      },
      {
        "id": 7,
        "title": "Rate Limited Requests",
        "type": "stat",
        "gridPos": {"x": 18, "y": 16, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(nginx_ingress_controller_requests{status=\"429\"}[5m]))"
          }
        ]
      },
      {
        "id": 8,
        "title": "Upstream Response Time",
        "type": "heatmap",
        "gridPos": {"x": 0, "y": 24, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(nginx_ingress_controller_response_duration_seconds_bucket[5m])) by (le)",
            "format": "heatmap"
          }
        ]
      }
    ]
  }
}