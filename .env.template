# Neo Service Layer Environment Variables Template
# Copy this file to .env and fill in the values

# JWT Configuration (Required)
# Generate with: openssl rand -base64 32
JWT_SECRET_KEY=

# PostgreSQL Configuration (Required)
POSTGRES_PASSWORD=

# Optional: Database Connection Override
# DATABASE_CONNECTION_STRING=Host=localhost;Port=5432;Database=neo_service_layer;Username=neo_user;Password=your_password;Include Error Detail=true;

# Redis Configuration (Optional)
# REDIS_CONNECTION_STRING=localhost:6379

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://localhost:3001

# SGX Configuration
NEO_ALLOW_SGX_SIMULATION=true

# Intel Attestation Service (Optional - for production SGX)
# IAS_API_KEY=

# Configuration Encryption (Optional)
# CONFIG_ENCRYPTION_KEY=

# Blockchain Configuration (Optional - override defaults)
# NEO_N3_RPC_URL=http://localhost:20332
# NEO_N3_WEBSOCKET_URL=ws://localhost:20334
# NEO_X_RPC_URL=http://localhost:8545
# NEO_X_WEBSOCKET_URL=ws://localhost:8546

# Environment
ASPNETCORE_ENVIRONMENT=Development
DOTNET_ENVIRONMENT=Development

